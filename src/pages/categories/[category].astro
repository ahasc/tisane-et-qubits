---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import CategoryBadge from '../../components/CategoryBadge.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const categories = ['algorithmes', 'hardware', 'cryptographie', 'applications', 'theorie'];
  
  return categories.map(category => {
    const posts = allPosts.filter(post => post.data.category === category);
    return {
      params: { category },
      props: { posts, category },
    };
  });
}

const { posts, category } = Astro.props;
const sortedPosts = posts.sort((a: any, b: any) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

const categoryNames: Record<string, string> = {
  'algorithmes': 'Algorithmes',
  'hardware': 'Hardware',
  'cryptographie': 'Cryptographie',
  'applications': 'Applications',
  'theorie': 'Th√©orie',
};

const categoryIcons: Record<string, string> = {
  'algorithmes': 'üî¢',
  'hardware': '‚öôÔ∏è',
  'cryptographie': 'üîê',
  'applications': 'üöÄ',
  'theorie': 'üìê',
};
---

<Layout title={`${categoryNames[category]} - Tisane & Qubits`}>
  <div class="container">
    <nav class="breadcrumb">
      <a href="/">Accueil</a>
      <span class="sep">/</span>
      <a href="/categories">Cat√©gories</a>
      <span class="sep">/</span>
      <span class="current">{categoryNames[category]}</span>
    </nav>

    <div class="page-header">
      <div class="header-top">
        <span class="big-icon">{categoryIcons[category]}</span>
        <div>
          <h1>{categoryNames[category]}</h1>
          <p class="count">{sortedPosts.length} article{sortedPosts.length > 1 ? 's' : ''}</p>
        </div>
      </div>
    </div>

    <div class="posts-grid">
      {sortedPosts.map((post: any) => (
        <article class="post-card">
          <div class="card-top">
            <CategoryBadge category={post.data.category} />
            <span class="date">
              {post.data.pubDate.toLocaleDateString('fr-FR', { 
                month: 'short', 
                day: 'numeric',
                year: 'numeric'
              })}
            </span>
          </div>
          <h2>
            <a href={`/blog/${post.slug}`}>{post.data.title}</a>
          </h2>
          <p class="excerpt">{post.data.description}</p>
          <div class="card-bottom">
            <div class="meta">
              <span class="author">Par {post.data.author}</span>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="tags">
                  {post.data.tags.slice(0, 2).map((tag: string) => (
                    <span class="tag">#{tag}</span>
                  ))}
                </div>
              )}
            </div>
            <a href={`/blog/${post.slug}`} class="read-btn">Lire ‚Üí</a>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 2rem 0;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .breadcrumb a {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb a:hover {
    color: var(--primary);
  }

  .sep {
    color: var(--text-dim);
  }

  .current {
    color: var(--text-dim);
  }

  .page-header {
    padding: 2rem 0 3rem;
  }

  .header-top {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .big-icon {
    font-size: 4rem;
  }

  .page-header h1 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2.5rem;
    color: var(--text);
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .count {
    color: var(--text-muted);
    font-size: 1rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    border-color: var(--primary);
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
  }

  .card-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .date {
    font-size: 0.85rem;
    color: var(--text-dim);
    font-weight: 500;
  }

  .post-card h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .post-card h2 a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s;
  }

  .post-card h2 a:hover {
    color: var(--primary);
  }

  .excerpt {
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .card-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .author {
    font-size: 0.85rem;
    color: var(--text-dim);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--text-dim);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }

  .read-btn {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s;
    white-space: nowrap;
  }

  .read-btn:hover {
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .big-icon {
      font-size: 3rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
