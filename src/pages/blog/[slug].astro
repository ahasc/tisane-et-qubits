---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { CollectionEntry } from 'astro:content';
import ReactionButton from '../../components/ReactionButton.astro';
import Comments from '../../components/Comments.astro';
import CategoryBadge from '../../components/CategoryBadge.astro';
import ViewCount from '../../components/ViewCount.astro';
import { calculateReadingTime, formatReadingTime } from '../../utils/readingTime';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Calculer le temps de lecture
const readingTime = calculateReadingTime(entry.body);
const readingTimeText = formatReadingTime(readingTime);
---

<Layout title={`${entry.data.title} - Tisane & Qubits`}>
  <div class="container">
    <nav class="breadcrumb">
      <a href="/">Accueil</a>
      <span class="sep">/</span>
      <a href="/blog">Articles</a>
      <span class="sep">/</span>
      <span class="current">{entry.data.title}</span>
    </nav>

    <article class="article">
      <header class="article-header">
        <div class="header-meta">
          <CategoryBadge category={entry.data.category} />
          <span class="read-time">‚òï {readingTimeText} de lecture</span>
          <ViewCount page={`/blog/${entry.slug}`} />
        </div>
        <h1>{entry.data.title}</h1>
        <p class="lead">{entry.data.description}</p>
        <div class="author-info">
          <div class="author-details">
            <span class="author-name">{entry.data.author}</span>
            <span class="pub-date">
              {entry.data.pubDate.toLocaleDateString('fr-FR', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </span>
          </div>
          {entry.data.tags && entry.data.tags.length > 0 && (
            <div class="tags-list">
              {entry.data.tags.map(tag => (
                <span class="tag">#{tag}</span>
              ))}
            </div>
          )}
        </div>
      </header>

      <div class="article-content">
        <Content />
      </div>

      <footer class="article-footer">
        <div class="reactions-section">
          <h3>üí´ Votre r√©action ?</h3>
          <div class="reactions-wrap">
            <ReactionButton emoji="ü§Ø" count={0} label="mind-blown" />
            <ReactionButton emoji="üëç" count={0} label="like" />
            <ReactionButton emoji="‚ù§Ô∏è" count={0} label="love" />
            <ReactionButton emoji="üöÄ" count={0} label="rocket" />
            <ReactionButton emoji="üß†" count={0} label="brain" />
          </div>
        </div>

        <Comments />

        <div class="nav-actions">
          <a href="/blog" class="btn-back">‚Üê Tous les articles</a>
          <a href="/categories" class="btn-categories">Explorer les cat√©gories ‚Üí</a>
        </div>
      </footer>
    </article>
  </div>
</Layout>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 2rem 0;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .breadcrumb a {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb a:hover {
    color: var(--primary);
  }

  .sep {
    color: var(--text-dim);
  }

  .current {
    color: var(--text-dim);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 200px;
  }

  .article {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 3rem 4rem 3rem;
  }

  .article-header {
    margin-bottom: 3rem;
    padding: 3rem 2rem;
    background: radial-gradient(ellipse at center, var(--bg-card) 0%, var(--bg) 100%);
    border-radius: 12px;
    border: 1px solid var(--border);
  }

  .header-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .read-time {
    font-size: 0.85rem;
    color: var(--text-dim);
  }

  .article-header h1 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--text);
    font-weight: 700;
  }

  .lead {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .author-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .author-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-name {
    font-weight: 600;
    color: var(--text);
  }

  .pub-date {
    font-size: 0.9rem;
    color: var(--text-dim);
  }

  .tags-list {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.8rem;
    color: var(--text-dim);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.3rem 0.7rem;
    border-radius: 4px;
  }

  .article-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-muted);
  }

  .article-content :global(h2),
  .article-content :global(h3),
  .article-content :global(h4) {
    font-family: 'Space Grotesk', sans-serif;
    color: var(--text);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
    font-weight: 600;
  }

  .article-content :global(h2) {
    font-size: 2rem;
  }

  .article-content :global(h3) {
    font-size: 1.5rem;
  }

  .article-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .article-content :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  .article-content :global(code) {
    background: var(--bg-elevated);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--secondary);
    border: 1px solid var(--border);
    font-family: 'JetBrains Mono', monospace;
  }

  .article-content :global(blockquote) {
    border-left: 3px solid var(--primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-muted);
    background: var(--bg-card);
    padding: 1.5rem;
    border-radius: 8px;
  }

  .article-content :global(a) {
    color: var(--primary);
    text-decoration: underline;
    text-decoration-color: rgba(139, 157, 195, 0.35);
    text-underline-offset: 2px;
    transition: all 0.3s;
  }

  .article-content :global(a:hover) {
    color: var(--primary-light);
    text-decoration-color: var(--primary);
  }

  .article-footer {
    margin-top: 4rem;
    padding: 0 2rem 2rem 2rem;
  }

  .reactions-section {
    padding: 2.5rem 0;
    border-top: 1px solid var(--border);
  }

  .reactions-section h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--text);
    font-weight: 600;
  }

  .reactions-wrap {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .nav-actions {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .btn-back,
  .btn-categories {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s;
    border: 1px solid var(--border);
  }

  .btn-back {
    background: var(--bg-card);
    color: var(--text-muted);
  }

  .btn-back:hover {
    background: var(--bg-elevated);
    border-color: var(--primary);
    color: var(--primary);
  }

  .btn-categories {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
  }

  .btn-categories:hover {
    background: var(--primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(139, 157, 195, 0.25);
  }

  @media (max-width: 768px) {
    .article {
      padding: 0 1rem 2rem 1rem;
    }

    .article-header {
      padding: 2rem 1.5rem;
    }

    .article-header h1 {
      font-size: 1.75rem;
    }

    .lead {
      font-size: 1rem;
    }

    .article-content {
      font-size: 1rem;
    }

    .article-content :global(h2) {
      font-size: 1.5rem;
    }

    .article-content :global(h3) {
      font-size: 1.25rem;
    }

    .article-footer {
      padding: 0 1rem 1rem 1rem;
    }

    .reactions-section h3 {
      font-size: 1.25rem;
    }

    .reactions-wrap {
      justify-content: center;
    }

    .nav-actions {
      flex-direction: column;
    }

    .breadcrumb {
      padding: 1rem 0;
      font-size: 0.85rem;
    }

    .breadcrumb .current {
      max-width: 120px;
    }

    .header-meta {
      flex-wrap: wrap;
      gap: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .article-header h1 {
      font-size: 1.5rem;
    }

    .article {
      padding: 0 0.75rem 2rem 0.75rem;
    }
  }
</style>
