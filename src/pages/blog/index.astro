---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import CategoryBadge from '../../components/CategoryBadge.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<Layout title="Tous les articles - Quantum Computing Blog">
  <div class="container">
    <div class="page-header">
      <a href="/" class="back-link">‚Üê Retour √† l'accueil</a>
      <h1>üìö Tous les articles</h1>
      <p>Explorez notre collection compl√®te d'articles sur l'informatique quantique</p>
    </div>

    <div class="posts-container">
      {sortedPosts.map(post => (
        <article class="post-card">
          <div class="card-top">
            <CategoryBadge category={post.data.category} />
            <span class="date">
              {post.data.pubDate.toLocaleDateString('fr-FR', { 
                month: 'short', 
                day: 'numeric',
                year: 'numeric'
              })}
            </span>
          </div>
          <h2>
            <a href={`/blog/${post.slug}`}>{post.data.title}</a>
          </h2>
          <p class="excerpt">{post.data.description}</p>
          <div class="card-bottom">
            <div class="meta">
              <span class="author">Par {post.data.author}</span>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="tags">
                  {post.data.tags.slice(0, 2).map(tag => (
                    <span class="tag">#{tag}</span>
                  ))}
                </div>
              )}
            </div>
            <a href={`/blog/${post.slug}`} class="read-btn">Lire ‚Üí</a>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .page-header {
    text-align: center;
    padding: 3rem 0 4rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 2rem;
    font-weight: 500;
    transition: all 0.3s;
  }

  .back-link:hover {
    color: var(--primary);
    gap: 0.75rem;
  }

  .page-header h1 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--text);
    font-weight: 700;
  }

  .page-header p {
    font-size: 1.2rem;
    color: var(--text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .posts-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    border-color: var(--primary);
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
  }

  .card-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .date {
    font-size: 0.85rem;
    color: var(--text-dim);
    font-weight: 500;
  }

  .post-card h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .post-card h2 a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s;
  }

  .post-card h2 a:hover {
    color: var(--primary);
  }

  .excerpt {
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .card-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .author {
    font-size: 0.85rem;
    color: var(--text-dim);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--text-dim);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }

  .read-btn {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s;
    white-space: nowrap;
  }

  .read-btn:hover {
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2.25rem;
    }

    .posts-container {
      grid-template-columns: 1fr;
    }
  }
</style>
