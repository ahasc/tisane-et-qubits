---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import CategoryBadge from '../components/CategoryBadge.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
const latestPosts = sortedPosts.slice(0, 3);
---

<Layout title="Tisane & Qubits - Accueil">
  <div class="container">
    <div class="hero">
      <div class="hero-badge">‚ú® Vulgarisation scientifique</div>
      <h1 class="hero-title"><span class="emoji-fix">üçµ</span> Prenez une tisane, parlons Qubits !</h1>
      <p>
        L'informatique quantique expliqu√©e simplement, avec des mots de tous les jours.
        Installez-vous confortablement, on d√©mystifie ensemble cet univers fascinant !
      </p>
      <div class="hero-cta">
        <a href="/blog" class="btn-primary">Explorer les articles</a>
        <a href="/categories" class="btn-secondary">Parcourir les cat√©gories</a>
      </div>
    </div>

    <section class="featured-posts">
      <div class="section-header">
        <h2>üìö Derniers articles</h2>
        <a href="/blog" class="view-all-link">Tout voir ‚Üí</a>
      </div>
      <div class="posts-grid">
        {latestPosts.map(post => (
          <article class="post-card">
            <div class="card-header">
              <CategoryBadge category={post.data.category} />
              <span class="post-date">
                {post.data.pubDate.toLocaleDateString('fr-FR', { 
                  month: 'short', 
                  day: 'numeric' 
                })}
              </span>
            </div>
            <h3>
              <a href={`/blog/${post.slug}`}>{post.data.title}</a>
            </h3>
            <p class="post-excerpt">{post.data.description}</p>
            <div class="card-footer">
              <span class="author">Par {post.data.author}</span>
              <a href={`/blog/${post.slug}`} class="read-link">Lire ‚Üí</a>
            </div>
          </article>
        ))}
      </div>
    </section>

    <section class="categories-section">
      <div class="section-header">
        <h2>üè∑Ô∏è Explorer par cat√©gorie</h2>
      </div>
      <div class="categories-grid">
        <a href="/categories/algorithmes" class="category-card">
          <span class="cat-icon">üî¢</span>
          <h3>Algorithmes</h3>
          <p>D√©couvrez les algorithmes quantiques r√©volutionnaires</p>
        </a>
        <a href="/categories/hardware" class="category-card">
          <span class="cat-icon">‚öôÔ∏è</span>
          <h3>Hardware</h3>
          <p>Technologies et architectures quantiques</p>
        </a>
        <a href="/categories/cryptographie" class="category-card">
          <span class="cat-icon">üîê</span>
          <h3>Cryptographie</h3>
          <p>S√©curit√© √† l'√®re quantique</p>
        </a>
        <a href="/categories/applications" class="category-card">
          <span class="cat-icon">üöÄ</span>
          <h3>Applications</h3>
          <p>Cas d'usage r√©els de l'informatique quantique</p>
        </a>
        <a href="/categories/theorie" class="category-card">
          <span class="cat-icon">üìê</span>
          <h3>Th√©orie</h3>
          <p>Fondamentaux de la m√©canique quantique</p>
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 2rem 2rem 2.5rem;
    position: relative;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(139, 157, 195, 0.15);
    color: var(--primary);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 2rem;
    border: 1px solid rgba(139, 157, 195, 0.25);
  }

  .hero-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text);
    line-height: 1.2;
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--text-muted);
    max-width: 700px;
    margin: 0 auto 2.5rem;
    line-height: 1.8;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    border: 1px solid var(--primary);
  }

  .btn-primary:hover {
    background: var(--primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(139, 157, 195, 0.25);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-muted);
    padding: 0.875rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    border: 1px solid var(--border);
  }

  .btn-secondary:hover {
    background: var(--bg-card);
    border-color: var(--primary);
    color: var(--primary);
  }

  section {
    margin: 1.5rem 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2.5rem;
  }

  .section-header h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2rem;
    font-weight: 600;
    margin: 0;
  }

  .view-all-link {
    color: var(--text-muted);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s;
  }

  .view-all-link:hover {
    color: var(--primary);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.75rem;
    transition: all 0.3s;
  }

  .post-card:hover {
    border-color: var(--primary);
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .post-date {
    color: var(--text-dim);
    font-size: 0.85rem;
    font-weight: 500;
  }

  .post-card h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.375rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .post-card h3 a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s;
  }

  .post-card h3 a:hover {
    color: var(--primary);
  }

  .post-excerpt {
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .author {
    color: var(--text-dim);
    font-size: 0.9rem;
  }

  .read-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s;
  }

  .read-link:hover {
    gap: 0.5rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .category-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s;
  }

  .category-card:hover {
    border-color: var(--primary);
    transform: translateY(-4px);
  }

  .cat-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 1rem;
    transition: transform 0.3s;
  }

  .category-card:hover .cat-icon {
    transform: scale(1.1) rotate(-5deg);
  }

  .category-card h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .category-card p {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .hero p {
      font-size: 1.1rem;
    }

    .hero-cta {
      flex-direction: column;
    }

    .btn-primary, .btn-secondary {
      width: 100%;
      text-align: center;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
